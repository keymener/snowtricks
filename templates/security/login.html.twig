{% extends 'base.html.twig' %}

{% block title %}
    Authentification
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-md-4">
                <h2>Authentification</h2>

                <div>

                    {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.password) }}

                    <button type="submit" class="btn btn-primary">Valider</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}



