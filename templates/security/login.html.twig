{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="col-md-4">

            <form method="post" action="{{ path('security_login') }}">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Authentification</h1>
                <label for="inputUsername" class="sr-only">Pseudo</label>
                <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control"
                       placeholder="Pseudo" required autofocus>
                <label for="inputPassword" class="sr-only">Mot de passe</label>
                <input type="password" name="_password" id="inputPassword" class="form-control mt-3" placeholder="Mot de passe"
                       required>


                    {#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                    {#See https://symfony.com/doc/current/security/remember_me.html#}

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>


                <button class="btn btn-primary" type="submit">
                    S'authentifier
                </button>
            </form>
        </div>
    </div>
{% endblock %}
